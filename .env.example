# Database Configuration
DATABASE_URL=postgresql+asyncpg://workflow_user:workflow_pass@localhost:5432/workflow_engine

# Application Settings
APP_NAME=Agent Workflow Engine
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# Workflow Engine Settings
MAX_CONCURRENT_RUNS=10
MAX_WORKFLOW_ITERATIONS=100
DEFAULT_TIMEOUT=300

# LLM Configuration (Optional - for future enhancements)
ENABLE_LLM=False
GEMINI_API_KEY=your_gemini_api_key_here

# Security (Future)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=*

# Redis (Future - for caching)
REDIS_URL=redis://localhost:6379/0
ENABLE_CACHE=False
